version: '3.9'

services:
    mongodb:
        image: mongo
        container_name: mongo_sorcery
        restart: always
        volumes:
            - ./mongodb:/data/db
        ports:
            - 27017:27017
        environment:
            MONGO_INITDB_DATABASE: ${MONGO_DATABASE}
            MONGO_INITDB_ROOT_USERNAME: ${MONGO_USER}
            MONGO_INITDB_ROOT_PASSWORD: ${MONGO_ROOT_PASSWORD}

    php:
        build: docker/php
        container_name: php_sorcery
        expose:
            - 9000
        restart: always
        volumes:
            - ./docker/php/conf/php.ini:/usr/local/etc/php/conf.d/custom.ini
            - ./docker/php/conf/xdebug.ini:/usr/local/etc/php/conf.d/xdebug.ini
            - ./docker/php/conf/error_reporting.ini:/usr/local/etc/php/conf.d/error_reporting.ini
            - ./:${PROJECT_ROOT}
        #links:
        #    - mongodb
        depends_on:
            - mongodb

    nginx:
        image: nginx:latest
        container_name: nginx_sorcery
        ports:
            - ${VIRTUAL_PORT}:80
        restart: always
        volumes:
            - ./docker/nginx/conf/default.conf:/etc/nginx/conf.d/default.conf
            - ./:${PROJECT_ROOT}
        depends_on:
            - php
